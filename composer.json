{
    "name": "joomla/crm-stages",
    "description": "Event-driven CRM with stage progression based on business rules",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Component\\CrmStages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Component\\CrmStages\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
